<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pikaso_texttoimage_4k_weather_app_backround"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/WeatherTypeLabel"
        android:layout_width="113dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="399dp"
        android:fontFamily="@font/alfa_slab_one"
        android:inputType="text|textImeMultiLine"
        android:text="Weather Type:"
        android:textColor="#FFD600"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/maxTempLabel"
        android:layout_width="117dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="278dp"
        android:layout_marginBottom="525dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Max:"
        android:textColor="#FFD600"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dayEditTxt"
        android:layout_width="238dp"
        android:layout_height="74dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="672dp"
        android:ems="10"
        android:hint="Enter Day(e.g., Friday)"
        android:inputType="text"
        android:textColorLink="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/minTempEditTxt"
        android:layout_width="234dp"
        android:layout_height="63dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="592dp"
        android:ems="10"
        android:hint="Enter Min Temp(e.g., 8)"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/maxTempEditTxt"
        android:layout_width="255dp"
        android:layout_height="70dp"
        android:layout_marginStart="139dp"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="515dp"
        android:ems="10"
        android:hint="Enter Max temp(e.g., 24)"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="168dp"
        android:layout_height="80dp"
        android:layout_marginStart="213dp"
        android:layout_marginTop="510dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="301dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Clear"
        android:textColor="#FFD600"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/weatherNotesEditTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="413dp"
        android:ems="10"
        android:hint="Enter Weather Condition(e.g., sunny)"
        android:inputType="text|textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="512dp"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="301dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Add"
        android:textColor="#FFD600"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weatherDetailsBtn"
        android:layout_width="203dp"
        android:layout_height="90dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="621dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="View Weather Details"
        android:textColor="#FFD600"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exit2Btn"
        android:layout_width="147dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="810dp"
        android:layout_marginEnd="248dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Exit"
        android:textColor="#FFD600"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dayLabel"
        android:layout_width="68dp"
        android:layout_height="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="171dp"
        android:layout_marginEnd="327dp"
        android:layout_marginBottom="687dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Day:"
        android:textColor="#FFD600"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minTempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="254dp"
        android:layout_marginEnd="344dp"
        android:layout_marginBottom="605dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="MIn:"
        android:textColor="#FFD600"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>