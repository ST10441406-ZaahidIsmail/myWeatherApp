<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pikaso_texttoimage_pixel_art_4k_weather_app_backround_welcome_screen_"
    android:orientation="vertical"
    tools:context=".Splash_screen">

    <Space
        android:layout_width="match_parent"
        android:layout_height="63dp" />

    <TextView
        android:layout_width="277dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center_horizontal"
        android:text="Welcome To Your Weather App"
        android:textColor="#FFD600"
        android:textColorHighlight="#00FFD600"
        android:textSize="26sp"
        android:textStyle="bold|italic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="29dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Zaahid Ismail"
        android:textColor="#FFD600"
        android:textColorHighlight="#000000"
        android:textColorLink="#00FFFFFF"
        android:textSize="22sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="ST10441406"
        android:textColor="#FFD600"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="22sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="252dp"
        app:srcCompat="@drawable/pikaso_texttoimage_pixel_art_4k_weather_app_logo_8bits__1__removebg_preview" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="132dp"
            android:layout_height="67dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="234dp"
            android:layout_marginBottom="136dp"
            android:backgroundTint="#6200EA"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Exit"
            android:textColor="#FFD600"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startBtn"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:layout_marginStart="239dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="133dp"
            android:backgroundTint="#6200EA"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Start"
            android:textColor="#FFD600"
            android:textColorHint="#000000"
            android:textColorLink="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>